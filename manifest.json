{
  "manifest_version": 3,
  "name": "Scroll Miles",
  "description" : "Tracks how much you have scrolled in real-world distances",
  "version": "1.1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content-script.js"]
    }
  ]
}
